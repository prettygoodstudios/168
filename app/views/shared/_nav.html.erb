<nav class="header">
  <ul class="desktop-menu">
    <li>
      <a class="branding" href="<%= root_path %>"><%= image_tag "schedule", style:"width:100px;height:100px;" %></a>
    </li>
    <li>
      <a class="nav-option" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
    </li>
    <%= login_helper %>
  </ul>
  <ul class="mobile-menu">
    <li>
      <button class="mobile-toggle">Menu</button>
    </li>
    <li>
      <a class="branding" href="<%= root_path %>"><%= image_tag "schedule", style:"width:100px;height:100px;" %></a>
    </li>
    <li>
      <a class="nav-option" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
    </li>
    <%= login_helper %>
  </ul>
</nav>
<script>
  var lastWidth = window.innerWidth;
  $(".mobile-toggle").click(function(){
    if(window.innerWidth < 768){
      $(".nav-option").toggle();
      $(".profile-menu").hide();
    }
  });
  $(document).ready(function(){
    lastWidth = window.innerWidth;
  });
  $(window).resize(function(){
    if(window.innerWidth < 768 && lastWidth > 768){
      $(".nav-option").hide();
      $(".profile-menu").hide();
    }else if(lastWidth > 768){
      $(".nav-option").show();
      $(".profile-menu").hide();
    }
    lastWidth = window.innerWidth;
  });
  $(".profile-toggle").click(function(){
    $(".profile-menu").toggle();
  });
</script>