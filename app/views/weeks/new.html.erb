<div class="container">
  <h1>Add a Week</h1>
  <p>You must choose a sunday for the starting date of a week.</p>
  <%= form_for(@week) do |f| %>
    <div class="form-group">
      <%= render "shared/alerts" %>
      <%= f.label :start, "Starting Date for Week." %>
      <%= f.date_field :start, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class:'btn btn-success' %>
    </div>
  <% end %>
</div>